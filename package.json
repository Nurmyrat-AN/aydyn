{
  "name": "aydyn-sistem",
  "version": "1.0.0",
  "description": "Desktop application for invoice management",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "react-start": "cd frontend && npm start",
    "react-build": "cd frontend && npm run build",
    "electron-build": "npm run react-build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.myinvoiceapp",
    "productName": "Aydyn Sistem",
    "files": [
      "electron-main.js",
      "package.json",
      "server/**/*",
      "client/build/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
